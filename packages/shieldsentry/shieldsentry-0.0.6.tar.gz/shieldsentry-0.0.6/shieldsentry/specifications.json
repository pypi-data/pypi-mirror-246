{
  "inputTypes": {
    "text": {
      "maxLength": 255,
      "regex": "^[a-zA-Z0-9 ]+$"
    },
    "numeric": {
      "min": 0,
      "max": 10000
    }
  },
  "sanitization": {
    "HTML": {
      "applyTo": ["text", "rich-text"],
      "method": "htmlEscape",
      "escapeCharacters": {
        "<": "&lt;",
        ">": "&gt;",
        "&": "&amp;",
        "\"": "&quot;",
        "'": "&#x27;",
        "/": "&#x2F;"
      }
    },
    "SQL": {
      "applyTo": ["text", "numeric"],
      "method": "sqlEscape",
      "escapeCharacters": {
        "'": "\\'",
        "\"": "\\\"",
        ";": "\\;",
        "--": "\\--"
      }
    }
  },
  "errors": {
    "invalidInput": {
      "code": 1001,
      "message": "Input validation failed"
    },
    "sanitizationError": {
      "code": 1002,
      "message": "Sanitization failed"
    }
  },
  "accessControl": {
    "roles": ["admin", "user", "guest"],
    "permissions": {
      "admin": ["all"],
      "user": ["read", "write"],
      "guest": ["read"]
    }
  }
}
